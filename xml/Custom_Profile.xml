				<height>117</height>
				<texture>icons/trophies2.png</texture>
			</control>
			<control type="label">
				<left>700</left>
				<top>500</top>
				<width>900</width>
				<height>233</height>
				<label>About Me</label>
				<font>Font36</font>
				<textcolor>grey</textcolor>
				<align>left</align>
				<autoscroll>false</autoscroll>
			</control>
			<control type="label">
				<left>700</left>
				<top>540</top>
				<width>900</width>
				<height>233</height>
				<label fallback="Hi, I'm...">$INFO[Skin.String(aboutme)]</label>
				<font>Font30</font>
				<textcolor>white</textcolor>
				<align>left</align>
				<autoscroll>false</autoscroll>
			</control>
			<control type="label">
				<left>700</left>
				<top>600</top>
